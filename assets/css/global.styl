@import '_settings'

normalize-css()
base()

body, html
  height: 100%

*
  box-sizing: border-box
  font-family: freight-sans-pro

.contain
  height: 100%

header
  background: olive
  text-align: center
  color: #333
  padding: 65px 0

  h1
    // ir('title.svg', 144px 43px)
    margin: 0 auto 15px auto
    color: white
    font-weight: bold
    upcase()

  h2
    normal()
    font-weight: 400
    font-size: 1em
    margin: 0

.sticky-wrapper
  width: 22%
  height: 100%
  float: left

  +below(800px)
    display: none

nav
  background: grey
  height: 100%
  overflow-y: scroll

  .logo-small
    background: olive
    width: 100%
    cursor: pointer
    height: 0
    overflow: hidden
    group()
    transition()

    h2
      margin: 0 auto
      background-size: 88px 26px
      color: white
      font-weight: bold
      text-align: center
      upcase()

  &.stuck
    position: fixed
    top: 0
    width: 22%

    .logo-small
      height: 60px
      padding: 16px 0

  ul
    reset-list()
    padding: 20px 30px 30px 30px

    li
      font-size: 1.3em
      font-weight: 500
      margin-bottom: 10px

      a
        reset-link()
        transition()
        color: #555

        &:hover
          opacity: .7

        &.active
          color: olive

      ul
        reset-list()
        display: none

        li
          font-size: .8em
          font-weight: 400
          margin-left: 15px
          margin: 6px 0 6px 15px

main
  padding: 20px 0
  margin-left: 22%

  +below(800px)
    margin-left: 0

section
  margin: 25px 5%
  max-width: 675px

  > p a
    link: olive

.instruction
  padding: 0 5%
  max-width: 675px

  p
    margin: .5em 0 0 0

    > code
      code()
      font-size: .75em

  a
    link: olive
    transition()

  h1
    margin: .5em 0

  &:first-child h1
    margin-top: 0

  h4
    margin: 1em 0

  pre code
    pre()
    font-size: .75em
    padding: 20px

    *
      font-family: fira-mono, monospace

.intro
  background: light-grey
  padding: 25px 5%
  margin-top: 25px

  p
    margin: .5em 0 0 0
    max-width: 650px

  a
    link: olive
    transition()

h1, h2, h3, h4, h5, h6
  word-wrap: break-word

h1
  font-size: 2em
  font-weight: 400
  -webkit-font-smoothing: subpixel-antialiased
  margin: 0
  cursor: pointer

h3
  font-family: fira-mono, monospace
  color: olive
  margin-top: 0
  cursor: pointer
  position: relative

  &:before
    content: ""
    size: 12px
    bg: 'link-icon.svg'
    absolute: top 8px left -7px
    opacity: 0
    transition()

  &:hover
    &:before
      left: -20px
      opacity: 1

h4
  color: #6D6D6D
  margin: .3em 0
  border-bottom: 1px solid darken(light-grey, 5%)

p
  color: #7c7c7c
  font-size: 17px
  line-height: 1.5em

hr
  border: 1px solid light-grey
  margin: 30px auto
  // ir('divider.svg', 423px 27px)

dt
  font-family: fira-mono, monospace

  &:after
    content: ":"

dd
  color: #8b8b8b
  font-size: 17px
  line-height: 1.5em

.example
  group()

  pre
    width: 50%
    float: left
    background: grey
    border: 1px solid darken(grey, 10%)
    border-radius: 4px
    padding: 15px
    font-family: fira-mono, monospace
    font-size: .9em

.el
  width: 50%
  float: left
  padding: 1em

section
  h3
    padding-top: 25px

  blockquote
    border-left: 2px solid light-gray
    padding-left: 10px
    font-style: italic

    strong
      font-style: none
